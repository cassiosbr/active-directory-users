# Copie este arquivo para .env e preencha os valores
# Ex.: cp .env.example .env

# Configurações gerais da API
APP_NAME=active-directory-users
ENVIRONMENT=local
LOG_LEVEL=INFO

# Proteção via X-API-Key (ver src/core/auth.py)
X_API_KEY=sua-chave-aqui

# Microsoft Graph (Client Credentials)
MICROSOFT_GRAPH_TENANT_ID=sua-tenant-id-aqui
MICROSOFT_GRAPH_CLIENT_ID=sua
MICROSOFT_GRAPH_CLIENT_SECRET=sua-client-secret-aqui
MICROSOFT_GRAPH_AUTHORITY=https://login.microsoftonline.com
MICROSOFT_GRAPH_API=https://graph.microsoft.com/v1.0

# Escopo recomendado para client credentials (app-only)
MICROSOFT_GRAPH_SCOPE=https://graph.microsoft.com/.default
